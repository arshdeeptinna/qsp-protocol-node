set -e 

FORK_BRANCH='.*:.*'
if [[ $TRAVIS_PULL_REQUEST_BRANCH =~ $FORK_BRANCH ]]; then
  echo $TRAVIS_PULL_REQUEST_BRANCH
  echo "Running test in local mode"
  make stylecheck test
else
  echo $TRAVIS_PULL_REQUEST_BRANCH
  echo "Running test in ci mode"
  make stylecheck test-travis-ci
fi
